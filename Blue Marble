//지역 함수
#define MAX_LOCAL 26//지역 갯수

typedef struct{	//지역 정보 구조체 선언
	char localname[50];	//지역 이름
	//int price[4];		//월세,전세,자가,빌딩
	//int level;		//발전도 0=월세, 1= 전세, 2= 자가, 3=빌딩
	char localowner[50]; //지역 소유자 이름
	int x[2];		//x좌표	(말 위치)
	int y[2];		//y좌표	(말 위치)
}Local_info;

